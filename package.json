{
  "name": "project",
  "type": "module",
  "version": "0.1.1",
  "private": true,
  "slug": "fairspec-extension",
  "title": "Fairspec Extension",
  "description": "Fairspec Extension is a Git repository template for rapid Fairspec extension development",
  "repository": "https://github.com/fairspec/fairspec-extension",
  "homepage": "https://fairspec.github.io/fairspec-extension",
  "author": "Evgeny Karev",
  "engines": {
    "node": "^24.0.0",
    "pnpm": "^10.0.0"
  },
  "scripts": {
    "bump": "ncu -ws -u",
    "build:py": "uv --directory python build",
    "build:ts": "pnpm -F typescript build",
    "clean": "npkill -D -x -y -nu && rm pnpm-lock.yaml",
    "configure": "node @configure.ts",
    "generate": "node @generate.ts",
    "format": "biome check --write",
    "install:ci": "pnpm install --ignore-scripts",
    "lint": "biome check",
    "prepare": "husky",
    "publish:py": "uv --directory python publish",
    "publish:ts": "pnpm -r publish --access public --ignore-scripts --no-git-checks",
    "start": "pnpm -F website start",
    "test": "pnpm lint && pnpm type",
    "type": "pnpm -r type",
    "version:py": "uv --directory python version",
    "version:ts": "pnpm --include-workspace-root -r exec pnpm version --no-git-tag-version"
  },
  "devDependencies": {
    "@adobe/jsonschema2md": "8.0.6",
    "@biomejs/biome": "2.2.5",
    "@clack/prompts": "0.11.0",
    "@semantic-release/exec": "7.1.0",
    "@types/node": "24.5.2",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "execa": "9.6.0",
    "fairspec": "0.2.2",
    "husky": "9.1.7",
    "json-schema-to-typescript": "15.0.4",
    "npkill": "0.12.2",
    "npm-check-updates": "18.0.1",
    "quicktype": "23.2.6",
    "remark": "15.0.1",
    "replace-in-file": "8.3.0",
    "semantic-release": "24.2.9",
    "smol-toml": "1.4.2",
    "tasuku": "2.0.5",
    "ts-to-zod": "5.1.0",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
