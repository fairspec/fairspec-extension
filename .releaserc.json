{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer", { "preset": "conventionalcommits" }],
    [
      "@semantic-release/release-notes-generator",
      { "preset": "conventionalcommits" }
    ],
    [
      "@semantic-release/exec",
      { "prepareCmd": "pnpm /version/ ${nextRelease.version}" }
    ],
    ["@semantic-release/exec", { "prepareCmd": "pnpm generate" }],
    [
      "@semantic-release/git",
      {
        "message": "release: v${nextRelease.version}",
        "assets": [
          "website/package.json",
          "website/profile.json",
          "website/schemas/*.json",
          "website/content/docs/specification/metadata.md",
          "website/content/docs/specification/data/*.md",
          "python/pyproject.toml",
          "python/*/profile.py",
          "python/*/schemas/*.py",
          "typescript/package.json",
          "typescript/profile.ts",
          "typescript/schemas/*.ts",
          "package.json"
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "pnpm /build/",
        "publishCmd": "pnpm /publish/"
      }
    ],
    ["@semantic-release/github"]
  ]
}
